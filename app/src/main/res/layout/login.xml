<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLay"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundColor">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/layoutFirst"
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_marginTop="5dp"
            android:id="@+id/placeholder"
            android:layout_below="@id/navLay"
            android:background="@color/internetConn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textPLace"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connectionPlaceholder"
                android:textSize="@dimen/font_size_big"
                android:textColor="@color/whiteColor"
                />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/topLay"
            android:layout_width="fill_parent"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logomain"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:src="@drawable/logo_full_size"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:contentDescription="Logo" />

        </RelativeLayout>


    <!-- Ram za layout za dugme dole -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/topLay">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/emailLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout4"
            android:layout_marginBottom="15dp"
            android:gravity="bottom">


            <EditText
                android:id="@+id/insertEmail"
                android:cursorVisible="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blueMain"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_above="@+id/insertEmail"
                android:textColorHint="@color/greyHint"
                android:hint="Email Address"
                android:singleLine="true"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:background="@null"
                android:padding="0dp"
                />


            <!-- Horizontalna linija -->
            <View
                android:id="@+id/hr1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/second"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/greyHint"/>



            <EditText
                android:id="@+id/insertPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:password="true"
                android:textColor="@color/blueMain"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/greyHint"
                android:hint="Password"
                android:layout_gravity="left"
                android:singleLine="true"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="16sp"
                android:background="@null"
                android:padding="0dp"
                />
        </LinearLayout>




        <!-- Layout za dugme LOGIN -->
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_above="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:background="@color/blueMain"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />

        </RelativeLayout>



        <!-- Layout za daugme google registe -->




        <!-- Layout za contact us-->
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2">

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? Contact Us"
                android:textColor="@color/blueMain"
                android:layout_gravity="left"
                android:textSize="13sp"
                />

    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>
</ScrollView>
        </LinearLayout>



